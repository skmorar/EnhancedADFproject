{
	"name": "df_scd2_example",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_empl_source_scd2",
						"type": "DatasetReference"
					},
					"name": "Source"
				},
				{
					"dataset": {
						"referenceName": "ds_empl_target_scd2",
						"type": "DatasetReference"
					},
					"name": "Target"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "SourceHash"
				},
				{
					"name": "TargetHash"
				},
				{
					"name": "exists1"
				},
				{
					"name": "IsActive"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as string,",
				"          FirstName as string,",
				"          LastName as string,",
				"          Email as string,",
				"          Phone as string,",
				"          IsActive as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Source",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Target",
				"Source derive(Hash = md5(ID,FirstName,LastName,Email,Phone)) ~> SourceHash",
				"Target derive(Hash = md5(ID,FirstName,LastName,Email,Phone)) ~> TargetHash",
				"SourceHash, TargetHash exists(SourceHash@Hash == TargetHash@Hash,",
				"     negate:true,",
				"     broadcast: 'auto')~> exists1",
				"exists1 derive() ~> IsActive"
			]
		}
	}
}